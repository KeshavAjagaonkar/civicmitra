{
  "watch": ["*.js", "routes/**/*.js", "controllers/**/*.js", "models/**/*.js", "middleware/**/*.js", "utils/**/*.js"],
  "ignore": [
    "node_modules/**/*",
    "uploads/**/*",
    "logs/**/*",
    "*.log",
    ".git",
    ".nyc_output",
    "coverage",
    ".env"
  ],
  "delay": 1000,
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  }
}